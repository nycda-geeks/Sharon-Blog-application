extends layout

block content

	h2 Blog

	each post in allPosts
		h3= post.title
		p= 'Posted by ' + post.user.name
		p= post.body
		img(src= post.img)
		br
		if storedUser	
			form(name="commenting", action="/comment", method="post")
				div.input
					span.label Leave your comment here:
					br
					textarea(type="text", name="postComment", cols="50", rows="3")
					input(type='text', name='id', value="#{post.id}", hidden)
					input(type='text', name='origin', value="/", hidden)
					br
					input(type="submit", value="Make a comment")
		else 
			a(href='http://localhost:3000/login') Please login to post comments.
		each one in post.comments
			p= 'Comment by ' + one.user.name
			p= one.body
		



